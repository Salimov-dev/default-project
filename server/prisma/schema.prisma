generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())  
  email     String   @unique
  password  String
  name      String
  banned    Boolean
  banReason String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
